<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hima.atef.splash.Activity.MainActivity">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/MainCounter"
        />

    <ImageButton
        android:id="@+id/MainPrayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MainCounter"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:layout_toEndOf="@+id/MainCounter"
        android:layout_toRightOf="@+id/MainCounter"
        android:src="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/MainAzkar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/MainCounter"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="44dp"
        android:src="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/MainTAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/MainPrayers"
        android:layout_toRightOf="@+id/MainPrayers"
        android:src="@mipmap/ic_launcher" />


</RelativeLayout>
